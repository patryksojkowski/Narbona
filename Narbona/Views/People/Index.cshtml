@model IEnumerable<PersonViewModel>

<!-- Button trigger modal -->
<div style="display:flex;
  justify-content: flex-end;">
    <button type="button" id="button1" class="btn btn-outline-dark" data-bs-toggle="modal" data-bs-target="#myModal">
        Add
    </button>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col">Description</th>
            <th scope="col">E-mail</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr id="tr-person-@person.Id">
                <th scope="row">@person.Id</th>
                <td>@person.Name</td>
                <td>@person.LastName</td>
                <td>@person.Description</td>
                <td>@person.Emails.FirstOrDefault()</td>
                <td>
                    <span type="button" class="btn btn-sm btn-outline-dark bi-pencil-square table-row-button" data-bs-toggle="modal" data-bs-target="#myModal" title="Edit"></span>
                    <span type="button" data-person-id="@person.Id" class="btn btn-sm btn-outline-dark bi-x-square table-row-button table-remove-button" title="Remove"></span>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal -->
<div class="modal fade" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-bs-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="inputName">Name</label>
                        <input type="text" class="form-control" id="inputName" placeholder="Name">
                    </div>
                    <div class="form-group ">
                        <label for="inputLast">LastName</label>
                        <input type="text" class=" form-control" id="inputLast" placeholder="Last">
                    </div>
                    <div class="form-group ">
                        <label for="inputEmail">Email</label>
                        <input type="email" class=" form-control" id="inputEmail" placeholder="E-mail">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-bs-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>
